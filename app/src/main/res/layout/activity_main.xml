<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Not connected"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:background="#f0f0f0"
        android:padding="8dp"
        android:textColor="@android:color/black" />

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/receiveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🚗 ECM Emitter\n(Emit Data)"
            android:layout_marginEnd="2dp"
            android:textSize="11sp"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📱 Connect to ECM\n(Receive Data)"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:textSize="11sp"
            android:backgroundTint="#2196F3" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop"
            android:layout_marginStart="2dp"
            android:enabled="false"
            android:textSize="11sp"
            android:backgroundTint="#d32f2f" />

    </LinearLayout>

    <!-- Scan Button -->
    <Button
        android:id="@+id/scanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔍 Scan for ECM Emitter Devices"
        android:layout_marginBottom="16dp"
        android:textSize="14sp"
        android:backgroundTint="#FF9800"
        android:textColor="@android:color/white" />

    <!-- Frequency Control -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:background="#e8f5e8"
        android:padding="12dp">

        <TextView
            android:id="@+id/frequencyLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ECM Data Emission Frequency: 1.0 Hz (1000ms)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <SeekBar
            android:id="@+id/frequencySeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fast (10Hz)"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Slow (0.2Hz)"
                android:textSize="12sp"
                android:gravity="end"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

    </LinearLayout>

    <!-- Messages Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ECM Data Stream:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        android:background="#f8f8f8"
        android:padding="4dp">

        <TextView
            android:id="@+id/messagesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to start ECM communication...\n\n🚗 Device A (ECM): Click 'ECM Emitter' to become discoverable and emit engine data\n📱 Device B (Client): Click 'Connect to ECM' to scan and receive engine data"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:fontFamily="monospace" />

    </ScrollView>

    <!-- Statistics -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f0f8ff"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🚗 ECM Data Emulator"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Protocol: Bluetooth SPP"
            android:textSize="12sp"
            android:gravity="end"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

</LinearLayout>